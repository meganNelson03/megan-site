<%= form_for @contact_request, url: contact_request_path do |f| %>
    <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
    </div>

    <div class="form-group">
        <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
    </div>

    <div class="form-group">
        <%= f.text_area :message, class: 'form-control', placeholder: 'Message', rows: 5 %>
    </div>

    <%= f.hidden_field :email_validation %>
    <%= f.submit "Get in Touch", class: 'btn btn-main btn-xl btn-round' %>
<% end %>

