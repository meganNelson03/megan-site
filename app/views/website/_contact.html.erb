<section class="container padding-bottom">
    <div class="row">
        <div class="col-5">
            <h2 class="section-title">Contact Me.</h2>
            <p><%= LoremIpsum.lorem_ipsum(words: 25) %></p>
            <ul class="unstyled-list horizontal-list icon-list">
                <li>
                    <a href="<%= GITHUB %>" target="_blank">
                    <i class="fa-brands icon icon-dark-1 icon-lg fa-github"></i>
                    </a>
                </li> 
                <li>
                    <a href="<%= LINKED_IN %>" target="_blank">
                    <span class="fa-stack icon-dark-2 icon-lg">
                        <i class="fas fa-circle fa-stack-2x circle"></i>
                        <i class="fab fa-linkedin-in fa-stack-1x inner-icon fa-inverse"></i>
                    </span>
                    </a>
                </li>
                <li>
                    <a href="mailto:<%= EMAIL %>">
                    <span class="fa-stack icon-dark-3 icon-lg">
                        <i class="fas fa-circle fa-stack-2x circle"></i>
                        <i class="fas fa-envelope fa-stack-1x inner-icon fa-inverse"></i>
                    </span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-7">
            <%= render 'form' %>
        </div>
    </div>
</section>

<style>

.icon-dark-1, .icon-dark-2, .icon-dark-3 {
    transition: all 0.125s ease-in;
}

.icon-dark-1:hover, .icon-dark-2:hover, .icon-dark-3:hover {
    color: #274c73
}

.icon-dark-1 {
    color: #297b62
}

.icon-dark-2 {
    color: #369c7d;
}

.icon-dark-3 {
    color: #b8e8b3;
}

ul {
    padding-left: 0px;
}

.horizontal-list {
    display: inline-flex;
}

.horizontal-list > li {
    margin-right: 1rem;
}

.icon-dark {
    color: darkgray;
}


</style>