<section id="contact" class="container padding-bottom light-section padded-section-es-md-auto">
    <div class="row">
        <div class="col-12 col-md-5 pe-md-5">
            <h2 class="section-title">Contact Me.</h2>
            <p>
            Interested? Please reach out to me on LinkedIn, through my email, or via this contact form. Iâ€™ll get back to you as soon as possible.
            </p>
            <ul class="unstyled-list horizontal-list icon-list pt-4">
                <li>
                    <a href="<%= GITHUB %>" target="_blank">
                    <i class="fa-brands icon icon-1 icon-lg fa-github"></i>
                    </a>
                </li> 
                <li>
                    <a href="<%= LINKED_IN %>" target="_blank">
                    <span class="fa-stack icon-2 icon-lg">
                        <i class="fas fa-circle fa-stack-2x circle"></i>
                        <i class="fab fa-linkedin-in fa-stack-1x inner-icon fa-inverse"></i>
                    </span>
                    </a>
                </li>
                <% if false %>
                <li>
                    <%= link_to asset_path("Resume.pdf", skip_pipeline: true) do %>
                        <span class="fa-stack icon-3 icon-lg">
                            <i class="fas fa-circle fa-stack-2x circle"></i>
                            <i class="fas fa-file-alt fa-stack-1x inner-icon fa-inverse"></i>
                        </span>
                    <% end %>
                </li>
                <% end %>
                <li>
                    <a href="mailto:<%= EMAIL %>">
                        <span class="fa-stack icon-4 icon-lg">
                            <i class="fas fa-circle fa-stack-2x circle"></i>
                            <i class="fas fa-envelope fa-stack-1x inner-icon fa-inverse"></i>
                        </span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-12 col-md-7 mt-3 me-md-0">
            <div class="form-container">
                <%= render 'form' %>
            </div>
        </div>
    </div>
</section>
