<table class="custom-table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
        <tr>
            <td><%= category.try(:name) %></td>
            <td class="action-td">
                  <%= button_to admin_category_path(category), :method => :delete, class: 'btn btn-action btn-delete', data: { confirm: 'Are you sure?' } do %>
                      <i class="fas fa-trash-alt"></i>
                  <% end %>
                  <%= link_to edit_admin_category_path(category) do %>
                    <i class="fas fa-pencil"></i>
                  <% end %>
                  <%= link_to admin_category_path(category), class: 'btn btn-action btn-view'  do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
            </td>
        </tr>
    <% end %>
  </tbody>
</table>

<style>

.action-td {
    text-align: end;
}

form.button_to {
    display: inline-flex;
}

table {
    width: 100%;
}

</style>