<section class="under-development">
    <%= image_tag 'circuit-board--lg.svg', class: 'bg-element w-100 h-100 object-fit-cover' %>
    <div class="row centered w-100">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="content-card">
                <h1 class="section-title">Under Development</h1>
            </div>
        </div>
        <div class="col-3">
        </div>
    </div>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-4 p-relative">
            <%= image_tag 'circuit-board--lg.svg', class: 'bg-element bg-green bg-inset-shadow' %>
        </div>
        <div class="col-4"></div>
    </div>
</section>


<style>

.p-relative {
    position: relative;
}

.bg-green {
    background: #287b61;
    width: 100%;
    height: 50vh;
    min-height: 500px;
    top: 5rem;
}

.centered {
  position: fixed;
  top: 50%;
  left: 50%;
  /* bring your own prefixes */
  transform: translate(-50%, -50%);
}

.content-card {
    padding: 2rem;
    z-index: 1;
    background: white;
    box-shadow: 0px 0px 90px rgba(0, 0, 0, 0.3);
}

.bg-element {
    object-fit: cover;
    position: absolute;
    z-index: -1;
}

.under-development {
    position: relative;
    background: #b8e8b32b;
    height: 100vh;
    width: 100vw;
    z-index: -2;
}

</style>