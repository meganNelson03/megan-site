<div data-animate-in="animate-slide-in" class="notice"><%= notice %></div>
<p data-animate-in="slide-in" class="alert"><%= alert %></p>


<style>

.animate-slide-in {
	animation: slide-in 1s ease;
	animation-fill-mode: forwards;
}

@keyframes slide-in {
	from {
	  opacity: 0;
	  transform: translateX(100px);
	}
	to {
	  opacity: 1;
	  transform: translateX(0px);
	}
}

.animate-slide-out {
	animation: slide-out 1s ease;
	animation-fill-mode: forwards;
}

@keyframes slide-out {
	from {
	  opacity: 1;
	  transform: translateX(0);
	}
	to {
	  opacity: 0;
	  transform: translateX(100px);
	}
}

